<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Silver"
    android:orientation="vertical"
    android:padding="@dimen/p10"
    tools:context=".M0707">

    <tw.tcnr15.m0707.CircleImgbutton
        android:id="@+id/m0707_imgbutton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/p50"
        android:layout_marginTop="10dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/img04th" />

    <tw.tcnr15.m0707.CircleImgView
        android:id="@+id/m0707_imgView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/p20"
        android:layout_marginTop="@dimen/p100"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/img03th" />

    <TextView
        android:id="@+id/m0707_t001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/p10"
        android:layout_marginTop="@dimen/p200"
        android:text="@string/m0707_t001"
        android:textSize="@dimen/fontsize" />

    <TextView
        android:id="@+id/myname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/p20"
        android:layout_marginBottom="@dimen/p20"
        android:text="@string/myname"
        android:textColor="@color/Blue"
        android:textSize="@dimen/fontsize" />

</RelativeLayout>